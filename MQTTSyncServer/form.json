{
  "elements": [
    {
      "type": "ExpansionPanel",
      "caption": "MQTT Settings",
      "items": [
        {
          "type": "ValidationTextBox",
          "name": "GroupTopic",
          "caption": "MQTT Group Topic",
          "default": "symcon/group",
          "required": true,
          "tooltip": "Topic group for all devices"
        },
        {
          "type": "CheckBox",
          "name": "Retain",
          "caption": "Retain Flag",
          "default": false,
          "tooltip": "Retain MQTT messages"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Devices Configuration",
      "items": [
        {
          "type": "List",
          "name": "Devices",
          "caption": "Devices",
          "add": true,
          "delete": true,
          "columns": [
            {
              "caption": "ObjectID",
              "name": "ObjectID",
              "width": "100px",
              "add": true,
              "edit": { "type": "SelectObject" }
            },
            {
              "caption": "MQTT Topic",
              "name": "MQTTTopic",
              "width": "200px",
              "add": true,
              "edit": { "type": "ValidationTextBox" }
            },
            {
              "caption": "Name",
              "name": "Name",
              "width": "150px",
              "add": true,
              "edit": { "type": "ValidationTextBox" }
            },
            {
              "caption": "Type",
              "name": "Type",
              "width": "100px",
              "add": true,
              "edit": {
                "type": "Select",
                "options": [
                  { "caption": "Sensor", "value": "sensor" },
                  { "caption": "Actuator", "value": "actuator" },
                  { "caption": "Other", "value": "other" }
                ]
              }
            },
            {
              "caption": "Location",
              "name": "Location",
              "width": "120px",
              "add": true,
              "edit": { "type": "ValidationTextBox" }
            },
            {
              "caption": "Description",
              "name": "Description",
              "width": "150px",
              "add": true,
              "edit": { "type": "ValidationTextBox" }
            },
            {
              "caption": "Install Date",
              "name": "InstallationDate",
              "width": "120px",
              "add": true,
              "edit": { "type": "ValidationTextBox" }
            },
            {
              "caption": "Active",
              "name": "IsActive",
              "width": "70px",
              "add": true,
              "edit": { "type": "CheckBox" }
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Actions",
      "items": [
        {
          "type": "Button",
          "label": "Synchronize Data",
          "onClick": "synchronizeData"
        },
        {
          "type": "Button",
          "label": "Send Configuration to Client",
          "onClick": "sendConfigurationToClient"
        },
        {
          "type": "Button",
          "label": "Send Variable Profiles to Client",
          "onClick": "sendProfilesToClient"
        },
        {
          "type": "Button",
          "label": "Send Variables to Client",
          "onClick": "sendVariablesToClient"
        }
      ]
    }
  ],
  "actions": []
}
